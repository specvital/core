{
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.renderWhitespace": "boundary",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.folding": true,
  "editor.foldingStrategy": "auto",
  "editor.foldingImportsByDefault": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "quickCommandButtons.buttons": [
    {
      "name": "$(git-branch) Git",
      "shortcut": "g",
      "color": "green",
      "group": [
        {
          "name": "Push",
          "command": "git add . && git commit --amend --no-edit && git push -f",
          "terminalName": "Forced Push",
          "shortcut": "p"
        },
        {
          "name": "Pull",
          "command": "git pull",
          "terminalName": "Pull",
          "shortcut": "l"
        },
        {
          "name": "Commit",
          "command": "git add . && git commit --amend --no-edit",
          "terminalName": "Add and Commit Amend",
          "shortcut": "c"
        },
        {
          "name": "Reset Soft",
          "command": "git reset --soft HEAD~1",
          "terminalName": "Reset Soft",
          "shortcut": "r"
        },
        {
          "name": "Rebase 5",
          "command": "git rebase -i HEAD~5",
          "terminalName": "Rebase Interactive 5",
          "shortcut": "b"
        },
        {
          "name": "Checkout main",
          "command": "git checkout main",
          "terminalName": "Checkout main",
          "shortcut": "m"
        }
      ]
    },
    {
      "name": "$(tools) Utils",
      "shortcut": "u",
      "color": "teal",
      "group": [
        {
          "name": "Deps",
          "command": "just deps",
          "terminalName": "Deps",
          "shortcut": "d"
        },
        {
          "name": "Lint",
          "command": "just lint",
          "terminalName": "Lint",
          "shortcut": "l"
        }
      ]
    },
    {
      "name": "$(hubot) Claude",
      "color": "blue",
      "shortcut": "c",
      "command": "export IS_SANDBOX=1 && claude --dangerously-skip-permissions",
      "terminalName": "Claude Yolo",
      "useVsCodeApi": false
    }
  ],
  "quickCommandButtons.refreshButton": {
    "icon": "$(refresh)",
    "color": "gray",
    "enabled": true
  }
}
